# ThinxAI Credentials Template
# Copy this to ~/.thinxai/config/credentials.env
# chmod 600 ~/.thinxai/config/credentials.env

# ===========================================
# REQUIRED: Anthropic API Key
# ===========================================
# Get from: https://console.anthropic.com/
export ANTHROPIC_API_KEY=""

# ===========================================
# OPTIONAL: Claude Model Configuration
# ===========================================
# Change this to use a different Claude model
export THINXAI_CLAUDE_MODEL="claude-sonnet-4-20250514"

# ===========================================
# OPTIONAL: Email Notifications
# ===========================================
# Gmail with App Password (enable 2FA first)
# Generate app password: https://myaccount.google.com/apppasswords
export GMAIL_ADDRESS=""
export GMAIL_APP_PASSWORD=""
export NOTIFICATION_EMAIL=""  # Where to send alerts

# ===========================================
# OPTIONAL: Telegram Bot
# ===========================================
# Create bot via @BotFather on Telegram
# Get your user ID from @userinfobot
export TELEGRAM_BOT_TOKEN=""
export TELEGRAM_ALLOWED_USERS=""  # Comma-separated user IDs (e.g., "123456789,987654321")

# ===========================================
# OPTIONAL: Web Chat Interface
# ===========================================
# Configure where the web interface listens
export THINXAI_WEB_HOST="127.0.0.1"  # Use 0.0.0.0 to allow remote connections
export THINXAI_WEB_PORT="8080"

# ===========================================
# OPTIONAL: Remote Server Integration
# ===========================================
# For spawning tasks on remote machines via Tailscale
export REMOTE_HOST=""           # Tailscale hostname or IP (e.g., "my-server.tailnet")
export REMOTE_USER=""           # SSH username on remote
export REMOTE_SSH_KEY="~/.ssh/id_ed25519"  # Path to SSH private key

# ===========================================
# OPTIONAL: Ollama (Local LLM)
# ===========================================
# If running Ollama on remote server
export OLLAMA_HOST=""  # e.g., "http://my-server.tailnet:11434"

# ===========================================
# OPTIONAL: OpenAI (Fallback/Comparison)
# ===========================================
export OPENAI_API_KEY=""

# ===========================================
# ThinxAI Paths (auto-configured)
# ===========================================
export THINXAI_DIR="$HOME/.thinxai"
export THINXAI_VENV="$HOME/.thinxai/venv"
