# Create bot via @BotFather on Telegram
export TELEGRAM_BOT_TOKEN='123456789:ABC...'
export TELEGRAM_ALLOWED_USER_IDS='your-telegram-user-id'

# ============================================
# OPTIONAL - Legato MCP
